---
import '../styles/global.css';

interface Props {
  title?: string;
}

const { title = "Aprende Alemán y Español" } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  </head>
  <body class="bg-[#141414] text-white min-h-screen font-[Inter]">
    <header class="fixed top-0 w-full bg-gradient-to-b from-black/80 to-transparent z-50 py-4">
      <nav class="container mx-auto px-4">
        <h1 class="text-2xl font-bold text-purple-500">LinguaFlix</h1>
      </nav>
    </header>
    <main class="pt-24">
      <slot />
    </main>
  </body>
</html> 